# S3/MinIO Configuration for Mermaid MCP Server
# Copy to .env and fill in your values

# Required: S3 endpoint URL
MERMAID_S3_ENDPOINT=http://10.42.1.100:8472

# Required: Bucket name for artifact storage
MERMAID_S3_BUCKET=mermaid-artifacts

# Required: Access credentials
MERMAID_S3_ACCESS_KEY=your-access-key
MERMAID_S3_SECRET_KEY=your-secret-key

# Optional: AWS region (default: us-east-1)
MERMAID_S3_REGION=us-east-1

# Optional: Presigned URL expiration in seconds (default: 3600 = 1 hour)
MERMAID_S3_PRESIGNED_EXPIRES_IN=3600

# Optional: Artifact retention in days (default: 90)
MERMAID_S3_RETENTION_DAYS=90
