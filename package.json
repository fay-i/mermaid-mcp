{
  "name": "@fay-i/mermaid-mcp",
  "version": "1.0.0",
  "description": "MCP server for rendering Mermaid diagrams to vector artifacts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mermaid-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fay-i/mermaid-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/fay-i/mermaid-mcp/issues"
  },
  "homepage": "https://github.com/fay-i/mermaid-mcp#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest run",
    "test:integration": "./scripts/integration-test.sh",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "build": "tsc",
    "clean": "rm -rf dist",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run build && npm run test && npm run test:integration"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "svg",
    "diagram"
  ],
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@aws-sdk/s3-request-presigner": "^3.962.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "lru-cache": "^11.2.4",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^23.11.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.3",
    "typescript": "^5.6.0",
    "vitest": "^4.0.16"
  }
}
