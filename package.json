{
  "name": "mermaid-mcp",
  "version": "0.1.0",
  "description": "MCP server for rendering Mermaid diagrams to vector artifacts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:integration": "./scripts/integration-test.sh",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "build": "tsc",
    "clean": "rm -rf dist",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run build && npm run test && npm run test:integration"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "svg",
    "diagram"
  ],
  "license": "MIT",
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "puppeteer": "^23.11.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "typescript": "^5.6.0",
    "vitest": "^4.0.16"
  }
}
