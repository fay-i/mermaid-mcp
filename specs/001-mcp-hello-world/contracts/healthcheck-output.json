{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HealthcheckOutput",
  "description": "Output schema for the healthcheck MCP tool",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean",
      "const": true,
      "description": "Always true for successful healthcheck"
    },
    "status": {
      "type": "string",
      "const": "healthy",
      "description": "Health status indicator"
    },
    "version": {
      "type": "string",
      "description": "Server version from package.json",
      "pattern": "^\\d+\\.\\d+\\.\\d+.*$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when response was generated"
    },
    "echo": {
      "type": "string",
      "description": "Echoed value if echo was provided in input"
    }
  },
  "required": ["ok", "status", "version", "timestamp"],
  "additionalProperties": false
}
